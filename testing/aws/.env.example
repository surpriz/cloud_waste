# AWS Credentials
# Create a dedicated IAM user for testing (NOT your admin account)
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_REGION=eu-north-1

# Terraform Variables
TF_VAR_aws_region=eu-north-1
TF_VAR_environment=test
TF_VAR_project_name=cutcosts-testing
TF_VAR_owner_email=your-email@example.com

# Batch Control (set to "true" or "false")
TF_VAR_enable_batch_1=true   # Core resources (~$20/month) - EBS, EIP, EC2, RDS, NAT, ALB
TF_VAR_enable_batch_2=false  # Advanced resources (~$95/month) - EKS, S3, Lambda, DynamoDB, Fargate
TF_VAR_enable_batch_3=false  # Advanced services (~$62/month) - ElastiCache, Kinesis, EFS, OpenSearch, API Gateway, CloudFront, ECS, CloudWatch
                             # ⚠️ WARNING: Destruction takes 30-45 minutes (CloudFront is VERY slow to delete)
                             # CloudFront distributions take 15-30 minutes to disable and delete
                             # ElastiCache and OpenSearch take 5-15 minutes to delete
TF_VAR_enable_batch_4=false  # [FUTURE] Platform/Messaging (~$243/month)
TF_VAR_enable_batch_5=false  # [FUTURE] Search/IaC (~$700/month)

# Optional: S3 Backend for Terraform State
# Uncomment these if you want to store state in S3
# TF_VAR_state_bucket=your-terraform-state-bucket
# TF_VAR_state_key=cutcosts-testing/terraform.tfstate
# TF_VAR_state_region=eu-north-1
